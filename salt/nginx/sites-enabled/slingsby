{% set bind_url = salt['pillar.get']('env:slingsby:bind_url') %}

upstream slingsby {
  least_conn;
  server unix:///tmp/slingsby.socket;
}

server {
  listen 80;
  server_name www.{{ bind_url }};
  return 301 $scheme://{{ bind_url }}$request_uri;
}

server {

  listen 80;
  server_name {{ bind_url }};
  charset utf-8;

  location / {
    include uwsgi_params;

    uwsgi_pass slingsby;

    uwsgi_param Host $host;
    uwsgi_param X-Real-IP $remote_addr;
    uwsgi_param X-Forwarded-For $proxy_add_x_forwarded_for;
    uwsgi_param X-Forwarded-Proto $http_x_forwarded_proto;

  }

  location /static {
    alias /srv/ntnuita.no/static/;
    expires 1y;
    access_log off;
    add_header Cache-Control "public";
  }

  # Restrict access to the tasks, so that they can only be accessed locally
  location ~ ^/tasks {
    allow 127.0.0.1;
    deny all;

    include uwsgi_params;
    uwsgi_pass slingsby;
  }

}
